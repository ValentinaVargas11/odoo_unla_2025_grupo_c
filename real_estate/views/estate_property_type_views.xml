<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de lista personalizada para estate.property.type -->
        <record id="estate_property_type_list_view" model="ir.ui.view">
            <field name="name">estate.property.type.list</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <list string="Tipos de Propiedad" editable="top">
                    <field name="name" />
                </list>
            </field>
        </record>

        <!-- Accion para mostrar los Tipos de Propiedad -->
        <record id="action_estate_property_type" model="ir.actions.act_window">
            <field name="name">Tipos de propiedad</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer tipo de propiedad
                </p>
            </field>
        </record>
    </data>
</odoo>