<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Etiquetas de propiedad" editable="top">
                <field name="price" />
                <field name="partner_id" />
                <field name="status" />
                <button name="action_accept_offer" string="Aceptar" type="object"
                    class="btn-primary" icon="fa-check" />
                <button name="action_refuse_offer" string="Rechazar" type="object"
                    class="btn-secondary" icon="fa-times" />
                
                <!-- Punto 9-->
                <field name="validity" />
                <field name="date_deadline" />
                <!-- Punto 11 -->
                <field name="property_type_id" />
                <field name="property_id" required="1" />
            </list>
        </field>
    </record>
</odoo>