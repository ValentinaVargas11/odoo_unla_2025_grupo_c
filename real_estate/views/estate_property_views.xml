<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de búsqueda para estate.property -->
        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Buscar Propiedades">
                    <!-- Campos de búsqueda -->
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>

                    <!-- Filtro para mostrar solo los registros creados por el usuario actual -->
                    <filter name="my_properties" string="Mis Propiedades" domain="[('create_uid','=',uid)]"/>

                    <!-- Agrupamientos -->
                    <group expand="1" string="Agrupar por">
                        <filter name="group_by_user" string="Usuario" context="{'group_by':'create_uid'}"/>
                        <filter name="group_by_month" string="Mes" context="{'group_by':'create_date:month'}"/>
                        <filter name="group_by_postcode" string="Código Postal" context="{'group_by':'postcode'}"/>
                        <filter name="available_properties" string="Propiedades disponibles" domain="[('state','in', ['new','offer_received'])]"/>
                        <filter name="group_by_estado" string="Agrupar por Estado" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vista de lista punto 22 -->
        <record id="estate_property_list_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Propiedades">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                </list>
            </field>
        </record>

        <!-- Vista de formulario punto 23 -->
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Form">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <h1> 
                                <field name="name" placeholder="Nombre Propiedad"/>
                                <!-- <field name="tag_ids" widget="many2many_tags"/> -->

                            </h1>
                        </group>
                        <group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                    </group>
                                    <group>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                        
                                    </group>
                                </group>
                            </page>

                            <page name="offers" string="Ofertas">
                                <group>
                                    <field name="offer_ids"/>
                                </group>
                            </page>

                            <page string="More information">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesman_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                </form>
            </field>
        </record>
        
        <!-- Asociar la vista search a la acción de ventana existente -->
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Propiedades</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="estate_property_search_view"/>
        </record>
    </data>
</odoo>