<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Punto 12-->
        <!-- Vista Lista -->
        <record id="view_estate_property_offer_list_all" model="ir.ui.view">
            <field name="name">estate.property.offer.list.all</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Ofertas" create="true" editable="bottom">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <!-- <field name="property_type_id"/> -->
                </list>
            </field>
        </record>

        <!-- Vista Formulario -->
        <record id="view_estate_property_offer_form_all" model="ir.ui.view">
            <field name="name">estate.property.offer.form.all</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Oferta">
                    <group>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="property_id"/>
                        <!--<field name="property_type_id"/> -->
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Accion -->
        <record id="action_estate_property_offer_all" model="ir.actions.act_window">
            <field name="name">Ofertas</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay ofertas todavia.
                </p>
            </field>
        </record>

        <!-- Menu de Ofertas dentro de "Inmobiliaria" -->
        <menuitem id="menu_estate_offer_all"
                  name="Ofertas"
                  parent="menu_estate_root"
                  action="action_estate_property_offer_all"
                  sequence="30" />

    </data>
</odoo>
